{
  "name": "rob04-connect",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write .",
    "typecheck": "tsc -b",
    "build": "npm run -w @rob04/shared build && npm run -w @rob04/server build && npm run -w @rob04/web build",
    "dev": "concurrently -n shared,server,web -c cyan,magenta,green \"npm:dev --workspace @rob04/shared\" \"npm:dev --workspace @rob04/server\" \"npm:dev --workspace @rob04/web\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
